<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Sale"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lin_layout_sub_add_sale_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/enter_itemID_sale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enter Product ID: "
                android:textColor="@android:color/black"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/editTextItemID_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_layout_sub_add_sale_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/enter_productID_sale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enter Product ID: "
                android:textColor="@android:color/black"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/editTextProductID_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_layout_sub_add_sale_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/enter_quantity_sale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enter Quantity: "
                android:textColor="@android:color/black"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/editTextQuantity_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />



        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_layout_sub_add_sale_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/enter_price_sale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enter Sale Price: "
                android:textColor="@android:color/black"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/editTextPrice_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />



        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_layout_sub_add_sale_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/enter_discount_sale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enter Discount: "
                android:textColor="@android:color/black"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/editTextDiscount_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_layout_sub_add_sale_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/enter_final_price_sale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enter Product ID: "
                android:textColor="@android:color/black"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/editTextFinalPrice_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />



        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/finish_adding_product2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Done" />
</RelativeLayout>